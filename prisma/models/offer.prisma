model Offer {
  id            String      @id @default(uuid())
  subject       String
  date          DateTime
  serviceStart  DateTime?   @map("service_start")
  serviceEnd    DateTime?   @map("service_end")
  reference     String?     @map("reference")
  customerId    String      @map("customer_id")
  subtotal      Float
  tax           Float
  taxRate       Float       @map("tax_rate")
  total         Float
  processor     String
  bankDetailsId String      @map("bank_details_id")
  status        OfferStatus @default(OPEN)
  statusDate    DateTime    @default(now()) @map("status_date")
  statusNote    String?     @map("status_note")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  items         OfferItem[]
  bankDetails   BankDetails @relation(fields: [bankDetailsId], references: [id])
  customer      Customer    @relation(fields: [customerId], references: [id])

  @@index([customerId], map: "idx_offer_customer_id")
  @@map("offers")
}

model OfferItem {
  id        String   @id @default(uuid())
  offerId   String   @map("offer_id")
  product   String
  artNr     String
  quantity  Int
  price     Float
  total     Float
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  offer     Offer    @relation(fields: [offerId], references: [id])

  @@index([offerId], map: "idx_offer_item_offer_id")
  @@map("offer_items")
}

enum OfferStatus {
  OPEN
  ACCEPTED
  REJECTED
}
