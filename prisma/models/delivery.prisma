model DeliveryNote {
  id             String         @id @default(uuid())
  date           DateTime
  deliveryDate   DateTime       @map("delivery_date")
  customerId     String         @map("customer_id")
  subtotal       Decimal        @db.Decimal(10, 2)
  tax            Decimal        @db.Decimal(10, 2)
  taxRate        Decimal        @map("tax_rate") @db.Decimal(5, 2)
  total          Decimal        @db.Decimal(10, 2)
  processor      String
  status         DeliveryStatus @default(PREPARED)
  orderNumber    String?        @map("order_number")
  shippingMethod String?        @map("shipping_method")
  trackingNumber String?        @map("tracking_number")
  notes          String?
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")
  items          DeliveryItem[]
  customer       Customer       @relation(fields: [customerId], references: [id])

  @@index([customerId], map: "idx_delivery_customer_id")
  @@index([status], map: "idx_delivery_status")
  @@map("delivery_notes")
}

model DeliveryItem {
  id             String       @id @default(uuid())
  deliveryNoteId String       @map("delivery_note_id")
  product        String
  artNr          String
  quantity       Int
  price          Decimal      @db.Decimal(10, 2)
  total          Decimal      @db.Decimal(10, 2)
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  deliveryNote   DeliveryNote @relation(fields: [deliveryNoteId], references: [id])

  @@index([deliveryNoteId], map: "idx_delivery_item_delivery_note_id")
  @@map("delivery_items")
}

enum DeliveryStatus {
  PREPARED
  SHIPPED
  DELIVERED
}
