model BankDetails {
  id        String   @id @default(uuid())
  recipient String
  institute String
  iban      String
  bic       String
  reference String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  Company   Company?
  offers    Offer[]

  @@index([recipient], map: "idx_bank_details_recipient")
  @@map("bank_details")
}
